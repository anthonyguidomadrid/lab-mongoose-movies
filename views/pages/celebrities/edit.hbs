<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Edit the celebrity</h2>
            <form action="/celebrities/{{id}}" method="POST">
                <div class="form-group">
                    <label for="title">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="desc">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label for="auth">Catchphrase</label>
                    <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" value="{{catchPhrase}}">
                </div>
                
                <button type="submit" class="btn btn-dark btn-block">Edit celebrity</button>
            </form>
        </div>
    </div>
</div>
